# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/eulens

# Google Gemini API (for bill summaries and chat features)
GEMINI_API_KEY=your_gemini_api_key_here

# Server Port (optional, defaults to 5001)
PORT=5001

# Automatic Weekly Updates (enabled by default)
# Set to 'false' to disable automatic weekly data updates
ENABLE_SCHEDULER=true

# Update Schedule (cron expression, default: Sundays at 3:00 AM)
# Format: minute hour day month weekday
# Examples:
#   '0 3 * * 0'  - Every Sunday at 3:00 AM (default)
#   '0 2 * * 1'  - Every Monday at 2:00 AM
#   '0 4 * * *'  - Every day at 4:00 AM
UPDATE_SCHEDULE=0 3 * * 0

# Run update immediately on server startup (optional)
UPDATE_ON_START=false

# Generate bill summaries after data update (enabled by default)
# Set to 'false' to skip AI-generated summaries
GENERATE_SUMMARIES=true

# Generate VAA questions after data update (enabled by default)
# Set to 'false' to skip VAA question generation
GENERATE_VAA=true

# Update PCA loadings for VAA ordering (enabled by default)
# Set to 'false' to skip PCA calculation
UPDATE_PCA_LOADINGS=true
